<%-include("partials/header")-%>
<div class="row basic-margin" >
  <div class="signup-page-container d-flex justify-content-center bg-light signup-page-body mx-auto" id="signup-page-container">
    <div class="form-container sign-up-container">
      <form  class="signup-page-form" action="#">
        <h1 class="font-weight-bold mx-0 my-0">Create Account</h1>
        <div class="social-container">
          <a href="#" class="social signup-page-a"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="social signup-page-a"><i class="fab fa-google-plus-g"></i></a>
          <a href="#" class="social signup-page-a"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <span class="signup-page-span">or use your email for registration</span>
        <input type="text" placeholder="Name" />
        <input type="email" placeholder="Email" />
        <input type="password" placeholder="Password" />
        <input type="tel" placeholder="Phone number" />
        <button class="btn btn-danger  btn-xs mt-3 shadow">Sign Up</button>
      </form>
    </div>
    <div class="form-container sign-in-container" >
      <form  class="signup-page-form" action="#">
        <h1 class="font-weight-bold mx-0 my-0">Sign in</h1>
        <div class="social-container">
          <a href="#" class="social signup-page-a"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="social signup-page-a"><i class="fab fa-google-plus-g"></i></a>
          <a href="#" class="social signup-page-a"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <span class="signup-page-span">or use your account</span>
        <input type="email" placeholder="Email" />
        <input type="password" placeholder="Password" />
        <a href="#" class="signup-page-a">Forgot your password?</a>
        <button class="btn btn-primary shadow btn-xs">Sign In</button>
      </form>
    </div>
    <div class="overlay-container" data-aos="fade-up" data-aos-duration="1000">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1 class="font-weight-bold mx-0 my-0">Hi,Welcome Back!</h1>
          <p class="signup-page-p">Nice to see you again,Enter your details and personal info to login to your account.</p>
          <button class="ghost btn btn-light btn-xs shadow" id="signIn">Sign In</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1 class="font-weight-bold mx-0 my-0">Hello buddy , New Here?</h1>
          <p class="signup-page-p">Enter your personal details to start a new and simplified journey only for your success....</p>
          <button class="ghost btn btn-light btn-xs shadow" id="signUp">Sign Up</button>
        </div>
       </div>
     </div>
   </div>
</div>

  <script src="/js/signupJs.js" charset="utf-8"></script>

<%-include("partials/footer")-%>
