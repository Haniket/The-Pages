<%-include("partials/header")-%>
<%if(msg=="wrong otp Please signup again"){%>
  <div class="alert alert-danger mt-5 pt-5 basic-margin">
  <strong>Opps!</strong> <%= msg %>
   </div>
<%}%>
<%if(forgetpassword=="There is no email present in our Database"){%>
  <div class="alert alert-danger mt-5 pt-5 basic-margin">
  <strong>Opps!</strong> <%= forgetpassword %>
   </div>
<%}%>
<%if(forgetpassword=="Please signup with this email once again account deleted from our database"){%>
  <div class="alert alert-danger mt-5 pt-5 basic-margin">
  <strong>Opps!</strong> <%= forgetpassword %>
   </div>
<%}%>

<div class="container-fluid">
  <div class="row basic-margin">

    <div class="signup-page-container d-flex justify-content-center bg-light signup-page-body mx-auto right-panel-active" id="signup-page-container" data-aos="flip-left" data-aos-duration="1000">
      <div class="form-container sign-up-container">
        <form class="signup-page-form" action="/signup" method="post">
          <h1 class="font-weight-bold mx-0 my-0">Create Account</h1>
          <div class="social-container">
            <a href="#" class="social signup-page-a"><i class="fab fa-facebook-f"></i></a>
            <a href="/auth/google"class="social signup-page-a social-google"><i class="fab fa-google-plus-g"></i></a>
          </div>
          <span class="signup-page-span">or use your email for registration</span>
          <input type="text" placeholder="Name" name="NameUser" required />
          <input type="email" placeholder="Email" name="username" required/>
          <input type="password" placeholder="Password" name="password" required/>
          <input type="tel" placeholder="Phone number" name="UserPhone" required/>
          <button class="btn btn-danger  btn-xs mt-3 shadow signupbutton" data-toggle="modal" data-target="#basicExampleModal">SignUp</button>
        </form>
      </div>
      <div class="form-container sign-in-container">

      </div>
      <div class="overlay-container" data-aos="flip-left" data-aos-duration="1000">
        <div class="overlay">
          <div class="overlay-panel overlay-left">
            <h1 class="font-weight-bold mx-0 my-0">Hi,Welcome Back!</h1>
            <p class="signup-page-p">Nice to see you again,Enter your details and personal info to login to your account.</p>
            <a href="/signin"><button class="ghost btn btn-light btn-xs shadow signupbutton" id="signIn">SignIn</button></a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>




