<%- include("partials/header")-%>


    <main class="container-fluid basic-margin">
      <div class="row">
        <div class="col-md-5 my-auto ml-md-4 pl-2">
          <!-- <div class="col-md-4 mx-auto my-3 "> -->
            <img src="/uploads/<%=courseImage%>" alt="courseImage" style="width:100%;height:350px">
          <!-- </div> -->
        </div>
        <div class="col-md-6 container-fluid mx-0 shadow py-4 px-5">
            <div class="product-description">
                <h5 class="h4 text-primary"><%=courseName%><br></h5>
                <h1><%=instructorName%></h1>
                <p><%=description%>.</p>
            </div>
            <div class="product-configuration">

                <div class="cable-config mb-5">
                    <span class="mb-5">SELLER DETAILS :</span>

                    <div class="cable-choose mb-1">
                        <P>Name: <%=result.name||result.name1%></P>
                        <P>Contact: <%=result.phonenumber||result.phonenumber1%></P>
                 <%if(result.email){%>
                        <P>Email: <%=result.email%></P>
                      <%}%>
                        <P>Hosel Number: <%=hostelNum%></P>
                    </div>
                    <a href="/safety">How to contact seller and make a deal</a>
                </div>
            </div>

            <div class="product-price row">
              <div class="col-6">
                <span>Rs. <%=discountedPrice%></span>
              </div>
                <div class="col-6 col-md-3">
                    <a href="#" class="btn btn-success shadow">BUY</a>
                </div>
              <div class="col-6 col-md-3 offset-6 offset-md-0" >
                  <a href="/addcourse/<%=result._id%>" class="btn btn-primary shadow my-3 px-3">add to cart</a>
              </div>

            </div>
        </div>
        <div class="col-md-1">

        </div>
      </div>

    </main>


</div>

<%- include("partials/footer")-%>
