<%- include("partials/header")-%>


    <main class="container-fluid basic-margin">
      <div class="row">
        <div class="col-md-5 px-md-5 mt-md-5 mb-3 my-auto">
          <div class=" mx-auto my-3 ">
            <img src="/uploads/<%=bookImage%>" alt="" style="width:100%;height:320px;  object-fit:contain;">
          </div>
        </div>
        <div class="col-md-6 container-fluid mx-0 shadow py-4 px-5">
            <div class="product-description">
                <h4 class="h4 text-primary"><%=subject%></h4>
                <h1><%=bookName%></h1><h5 class="pl-3">By <%=writer%></h5>
                <p><%=something%></p>
            </div>
            <div class="product-configuration">

                <div class="cable-config mb-5">
                    <span class="mb-5">SELLER DETAILS :</span>

                    <div class="cable-choose mb-1">
                        <P>Name:<%=found.name||found.name1%></P>
                        <P>Contact:<%=found.phonenumber||found.phonenumber1%></P>
                        <%if(found.email){%>
                        <P>Email:<%=found.email%></P>
                            <%}%>
                        <P>Hosel Number: <%=hostel%></P>
                    </div>
                    <a href="/safety">How to contact seller and make a deal</a>
                </div>
            </div>

            <div class="product-price row">
              <div class="col-6">
                <span>Rs. <%=discountedPrice%></span>
              </div>
                <div class="col-6 col-md-3">
                    <a href="#" class="btn btn-success shadow">BUY</a>
                </div>
              <div class="col-6 col-md-3 offset-6 offset-md-0" >
                  <a href="/add/<%=found._id%>" class="btn btn-primary shadow my-3 px-3">add to cart</a>
              </div>

            </div>
        </div>
        <div class="col-md-1">

        </div>
      </div>

    </main>


</div>

<%- include("partials/footer")-%>
