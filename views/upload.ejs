        <h2 class="h3 text-primary my-3">Course Info</h2>
        <form method="POST" id="form2" action="/upload" data-aos-duration="1000" data-aos="fade-up">
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="Instructor Name" name="InstructorName">
            </div>
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="Discounted Price" name="discountedPrice">
            </div>
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="How Many Hours Is It" name="time">
                <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
            </div>
            <div class="input-group">
                <div class="form-group">
                  <label for="selectCourseprovider">Select Course Provider</label>
                    <select name="courseProvider" required class="form-control" id="selectCourseprovider">
                        <!-- <option disabled="disabled" selected="selected">Website</option> -->
                        <option>Select</option>
                        <option>Udemy</option>
                        <option>coursera</option>
                        <option>Edx</option>
                        <option>Udacity</option>
                        <option>GeeksforGeeks</option>
                        <option>Others</option>
                    </select>
                    <!-- <div class="select-dropdown"></div> -->
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Course Discription" name="description">
            </div>
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="Hostel-number" name="HostelNum">
            </div>
            <%if(detail==""){%>
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="Your name" name="name1">
            </div>
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="Phone-number" name="phonenumber1">
            </div>
          <%}%>
            <div class="form-group">
                <input class="form-control" required type="text" placeholder="Room-no" name="RoomNum">
            </div>

                <button id="secondaryButton" class="btn btn-success btn-xs" type="submit" value="Click" onclick="document.getElementById('primaryButton').click()">Submit</button>

        </form>
    </div>

  </div>
  <div class="col-md-1">

  </div>
