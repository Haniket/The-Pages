          <form class="" id="form1" action="/upload" method="POST"enctype="multipart/form-data" >
        <input type="text" name="courseName" value="" required class=" mt-2 " data-aos-duration="900" data-aos="fade-up" placeholder="Course Name" <i class="fa fa-pencil"></i>
        <input type="text" name="actualPrice" value="" required class=" mt-2" data-aos-duration="900" data-aos="fade-up" placeholder="Actual price" <i class="fa fa-pencil"></i>

    <%-include("partials/hr")-%>
     <div class="my-4">
       <div class="stat">
         <div class="label">Shots</div>
          <div class="num">40</div>
        </div>
        <div class="stat">
          <div class="label">Projects</div>
          <div class="num">1</div>
        </div>

     </div>

    </div>
    </div>
    </div>

      <input type="file" id="upload-page-mediaFile" required name="courseImage" />

